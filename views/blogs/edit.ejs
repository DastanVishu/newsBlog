<% include ../partials/header %>
  
<div class="container">
    <div class="row">
        <div style=" margin: 25px auto;">      
                <h1> Edit the blog</h1>
            <form action="/blog/<%= data.id %>/edit?_method=PUT" method="POST">
                <div class ="form-group">
                    Title: <input class="form-control" type="text" name="blogpost[title]" value="<%= data.title %>">
                </div>
                <div class ="form-group">
                    Description: <textarea class="form-control" name="blogpost[description]"> <%= data.description %> </textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-la btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blog/<%= data.id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>